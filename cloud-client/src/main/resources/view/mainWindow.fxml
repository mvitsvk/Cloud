<Pane fx:id="pane" prefHeight="600.0" prefWidth="800.0" onKeyReleased="#fxKeyReleased"  xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="su.mvitsvk.client.controler.MainController">
