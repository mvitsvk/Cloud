       <Label layoutX="10.0" layoutY="10.0" text="local disk" />
       <Label layoutX="410.0" layoutY="10.0" text="remote disk" />

       <ListView fx:id="fxlocal" layoutX="10.0" layoutY="30.0" minHeight="0.0" minWidth="0.0" onMousePressed="#fxLocalMousePressed" onKeyPressed="#fxLocalEvent" prefHeight="510.0" prefWidth="380.0" />
